<h1 align="center">Categories</h1>

<table>
    <tbody>
        
        <% @categories.each do |category| %>
            <tr>
                <td><%= category.name %></td>
                <% category.restaurants.each do |restaurant| %>
                    <td><%= link_to "#{restaurant.name}", restaurant %></td>
                <% end %>
            </tr>
        <% end %>
        
    </tbody>
</table>

