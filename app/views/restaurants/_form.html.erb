  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <br>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <br>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <br>
  <div class="field">
    <%= f.label :zipcode %>
    <%= f.text_field :zipcode %>
  </div>
